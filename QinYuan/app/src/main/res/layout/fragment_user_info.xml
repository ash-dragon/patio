<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yjh.qinyuan.main.userinfo.UserInfoFragment">

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/label_username"
        android:text="@string/info_username"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/username"
        android:layout_toRightOf="@+id/label_username"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/label_name"
        android:layout_below="@+id/label_username"
        android:text="@string/info_name"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/name"
        android:layout_toRightOf="@+id/label_name"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/label_phone1"
        android:layout_below="@+id/label_name"
        android:text="@string/info_phone1"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/phone1"
        android:layout_toRightOf="@+id/label_phone1"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/label_phone2"
        android:layout_below="@+id/label_phone1"
        android:text="@string/info_phone2"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/phone2"
        android:layout_toRightOf="@+id/label_phone2"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/label_category"
        android:layout_below="@+id/label_phone2"
        android:text="@string/info_category"/>

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        style="@style/label_text"
        android:id="@+id/category"
        android:layout_toRightOf="@+id/label_category"/>

    <com.yjh.qinyuan.widget.widget.HelveticaButton
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_logout"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/login_text_size"/>
</RelativeLayout>
