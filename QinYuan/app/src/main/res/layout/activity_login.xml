<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yjh.qinyuan.LoginActivity">

    <com.yjh.qinyuan.widget.widget.MyActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/title"
        android:textSize="@dimen/login_text_size"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="20dp"
        android:text="@string/input_username_and_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.yjh.qinyuan.widget.widget.HelveticaEditText
        android:id="@+id/username"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/login_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username"/>

    <com.yjh.qinyuan.widget.widget.HelveticaEditText
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:textSize="@dimen/login_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"/>

    <com.yjh.qinyuan.widget.widget.HelveticaButton
        android:id="@+id/login"
        android:textSize="@dimen/login_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
