<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yjh.qinyuan.main.section.InfoFragment">


    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/label_contact"
        style="@style/label_text"
        android:text="@string/contact" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/contact"
        style="@style/label_text"
        android:layout_toRightOf="@id/label_contact"
        android:text="123" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/label_phone1"
        style="@style/label_text"
        android:layout_below="@+id/contact"
        android:text="@string/phone1" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/phone1"
        style="@style/label_text"
        android:layout_below="@+id/contact"
        android:layout_toRightOf="@id/label_phone1"
        android:text="1231111111" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/label_phone2"
        style="@style/label_text"
        android:layout_below="@+id/label_phone1"
        android:text="@string/phone2" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/phone2"
        style="@style/label_text"
        android:layout_below="@+id/label_phone1"
        android:layout_toRightOf="@id/label_phone1"
        android:text="123" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/label_address"
        style="@style/label_text"
        android:layout_below="@+id/phone2"
        android:text="@string/address" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/address"
        style="@style/label_text"
        android:layout_below="@+id/phone2"
        android:layout_toRightOf="@+id/label_address"
        android:text="123" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/label_remark"
        style="@style/label_text"
        android:layout_below="@+id/address"
        android:text="@string/remark" />

    <com.yjh.qinyuan.widget.widget.HelveticaTextView
        android:id="@+id/remark"
        style="@style/label_text"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/label_remark"
        android:text="123" />
</RelativeLayout>
